/* pages/posts/post-detail/post-detail.wxss */

.container {
  display: flex;
  flex-direction: column;
}

.head-img {
  width: 100%;
  height: 460rpx;
}

.author-from-date {
  flex-direction: row;
  margin-left: 30rpx;
  margin-top: 20rpx;
}

.avatar {
  width: 64rpx;
  height: 64rpx;
  vertical-align: middle;
}

.author {
  font-size: 30rpx;
  font-weight: 300;
  color: #666;
  vertical-align: middle;
  margin-left: 20rpx;
}

.from {
  margin-left: 20rpx;
  vertical-align: middle;
}

.date {
  font-size: 30rpx;
  margin-left: 30rpx;
  vertical-align: middle;
  color: #999;
}

.title {
  margin-top: 30rpx;
  margin-left: 30rpx;
  font-size: 36rpx;
  font-weight: 700;
  letter-spacing: 2px;
  color: #4b556c;
}

.tool {
  margin-top: 20rpx;
}

.circle-img {
  float: right;
  margin-right: 40rpx;
  vertical-align: middle;
}

.collection, .share {
  width: 90rpx;
  margin-left: 30rpx;
  height: 90rpx;
}

.driver {
  background-color: #e5e5e5;
  width: 660rpx;
  height: 1px;
  vertical-align: middle;
  position: relative;
  margin-left: 30rpx;
  top: 46rpx;
  margin: 0 auto;
  z-index: -99;
}

.content {
  color: #666;
  margin: 20rpx 30rpx 60rpx 30rpx;
  line-height: 44rpx;
  letter-spacing: 2px;
}

.audio {
  width: 102rpx;
  height: 110rpx;
  position: absolute;
  left: 50%;
  top: 180rpx;
  opacity: 0.6;
  margin-left: -51rpx;
}
