<!--pages/posts/post-detail/post-detail.wxml-->
<view class='container'>
  <image class='head-img' src='{{headImgSrc}}'></image>
  <image class='audio' src='/images/music/music-start.png'></image>
  <view class='author-from-date'>
    <image class='avatar' src='{{avatar}}'></image>
    <text class='author'>{{author}}</text>
    <text class='from'>{{date}}</text>
    <text class='date'>{{dateTime}}</text>
  </view>
  <text class='title'>{{title}}</text>
  <view class='tool'>
    <view class='circle-img'>
      <image class='collection' src='/images/icon/collection.png'></image>
      <image class='share' src='/images/icon/share.png'></image>
    </view>
    <view class='driver'></view>
  </view>
  <text class='content'>{{detail}}</text>
</view>