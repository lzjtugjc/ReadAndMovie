/* pages/posts/post.wxss */

page {
  background: #f0f0f0;
}

.container {
  background: white;
}

.banner {
  width: 100%;
  height: 600rpx;
}

swiper image {
  width: 100%;
  height: 100%;
}

.news-item {
  display: flex;
  flex-direction: column;
  width: 100%;
  margin-top: 20rpx;
  background: white;
  margin-bottom: 20rpx;
  border-bottom: 1rpx solid #ededed;
  border-top: 1rpx solid #ededed;
  padding-bottom: 5rpx;
}

.post-author-date {
  margin: 10rpx 0 20rpx 10rpx;
}

.author-avatar {
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle;
}

.post-date {
  margin-left: 20rpx;
  vertical-align: middle;
  font-size: 26rpx;
}

.post-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 10px;
  margin-left: 10rpx;
}
