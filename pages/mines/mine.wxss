/* pages/mines/mine.wxss */

page {
  background-color: #f0f0f0;
}

text {
  font-size: 14px;
  color: #333;
}

.page-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 100%;
  box-sizing: border-box;
}

.page-body-button {
  width: 100%;
}

.user-info-container {
  display: flex;
  flex-direction: column;
  width: 100%;
  background-color: white;
  height: 230rpx;
  box-shadow: 0 0 2px #888;
}

.page-body {
  width: 100%;
}

.userinfo-avatar {
  margin: 10px auto 0;
  border-radius: 128rpx;
  width: 128rpx;
  height: 128rpx;
}

.userinfo-nickname {
  width: 100%;
  margin: 10px auto 0rpx;
  text-align: center;
  font-size: 38rpx;
}

.clear-cache {
  margin-top: 10px;
  width: 100%;
  height: 50px;
  display: flex;
  flex-direction: row;
  align-items: center;
  background: white;
}

.mine-text{
  margin-left: 15px;
}
.mine_location, .scan_container ,.address_container{
  background: white;
  width: 100%;
  margin-top: 1px;
  height: 45px;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.service-container {
  position: absolute;
  bottom: 80px;
  width: 80rpx;
  height: 80rpx;
  right: 20rpx;
}

.service-container image {
  width: 80rpx;
  height: 80rpx;
}

.service-container button {
  opacity: 0;
  position: absolute;
  width: 80rpx;
  height: 80rpx;
}
